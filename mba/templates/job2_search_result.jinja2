        {% include "header.jinja2" %}

       <!--  <div class="container-fluid mba-margin-top mba-banner" >
            <center><img src="static/img/banner.jpg"></center>
        </div> -->
        <div class="container mt50">
            <div class="col-md-12 mba-my-resume-cnt">
                <div class="mba-resume-total-grid">
                   <!--  <img src="static/img/my_resume_title.jpg"> -->
                    <div class="search_cnt_normal" >
                        <form class="form-inline" action="job-search" role="form">
                          <div class="form-group">
				  <select id="search_region" name="search_region" data='{{city}}' class="form-control searchitem searchitemall selectpicker">  
                              <option value=0>不限</option>  
                              <option value=1>北京</option>  
                              <option value=2>上海</option>  
                              <option value=3>深圳</option>  
                            </select>  
                          </div>
                          <div class="form-group">
				  <select id="search_hangye" name="search_hangye" data='{{industy}}' class="form-control searchitem searchitemall selectpicker">  
                              <option value=0>不限</option>  
                              <option value=1>IT</option>  
                              <option value=2>通信/移动网络</option>  
                              <option value=3>传媒</option>  
                            </select>  
                          </div>
                           <div class="form-group">
				   <select id="search_fabufang" name="search_fabufang" data='{{hunting}}' class="form-control searchitemall selectpicker">  
                              <option value=2>不限</option>  
                              <option value=1>猎头</option> 
                              <option value=0>公司</option> 
                            </select>
                          </div>
                           <div class="form-group">
                           <label class="sr-only" for="gangwei">请输入关键字</label>
			   <input type="text" class="form-control" width="200px" id="gangwei" value="{{keyword}}">
                          </div>
                          <button type="button"  class="btn btn-search-normal" onclick="do_search()"></button>
			  <script>
function do_search() {
	var city = "";
	if($("#search_region").val() != 0) {
		city = $("#search_region option:selected").text();
	}
	var hungye = "";
	if($("#search_hangye").val() != 0) {
		hungye = $("#search_hangye option:selected").text();
	}
	window.location.href="job-search?city="+city+"&ind="+hungye+"&hun="+$("#search_fabufang").val()+"&key="+$("#gangwei").val();
}
			  </script>
                        </form>

                    </div>

                   
                    </div>


                    <div style="background-color:white;">
                      <div style="height:40px;padding-top:10px">
			      <div style="float:left;">共{{result_len}}个职位满足搜索条件:<span id="search_condition"></span></div>
                            <div style="float:right">排列方式： <select id="search_method" name="search_method" class="selectpicker">  
                                    <option value=0>相关性</option>  
                                    <option value=0>地区</option> 
                                  </select>
                            </div>
                      </div>
                     
                      <table id="lastest_job" class="table table-hover">
			      {% for job in results %}
                              <tr> 
                                <td>
					<p class="job_link">{{job.title}}({{job.city_name}})</p>
					<p><span class="inline-block">{{job.industry}}</span></p>
                                </td>
                                <td>
					<p class="job_link">{{job.company_name}}</p>
					<p><span>薪资:{{job.salar}}</span><span>学历:{{job.degree}}</span></p>
                                </td>
                                <td>
					<p>{{job.city_name}}</p>
                                </td>
                                <td>
					<p>{{job.public_date.strftime('%Y-%m-%d')}}</p>
                                </td>
                                <td>
					<button  class="btn btn-primary view_job"
					       	onclick='window.location.href="/job-detail/{{job.id}}"'>查看</button>
                                </td>
                              </tr>
			      {% endfor %}
                        </table>
                    <div id="pageCnt" style="float:right"> </div>        
                    </div>

            </div>

                


        </div>
        


        {% include "footer.jinja2" %}








        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.10.2.min.js"><\/script>')</script>

        <!-- Bootstrap -->
        <script src="static/bootstrap/js/bootstrap.min.js"></script>

        <script src="static/js/plugins.js"></script>

        <script src="static/js/main.js"></script>

        <script src="static/js/jquery.paginate.js"></script>

        <!-- Google Analytics: change UA-XXXXX-X to be your site's ID. -->
        <script>
            (function(b,o,i,l,e,r){b.GoogleAnalyticsObject=l;b[l]||(b[l]=
            function(){(b[l].q=b[l].q||[]).push(arguments)});b[l].l=+new Date;
            e=o.createElement(i);r=o.getElementsByTagName(i)[0];
            e.src='//www.google-analytics.com/analytics.js';
            r.parentNode.insertBefore(e,r)}(window,document,'script','ga'));
            ga('create','UA-XXXXX-X');ga('send','pageview');

            $(".resume_operate").click(function(){
              var url = $(this).attr("url");
              console.log(url);
              if(url)
              {
                location.href="./"+url;
              } 
            })

            $("#pageCnt").paginate({
              count     : {{result_len}},
              start     : 1,
              display     : 10,
              border          : false,
              text_color        : '#888',
              background_color      : '#EEE', 
              text_hover_color      : 'black',
              background_hover_color  : '#CFCFCF'
            });

            $(document).ready(function() {
		$(".searchitem").each(function() {
			var txt = $(this).attr("data");
			if(txt == '') {
				txt = '不限';
			}
			var sel = "#" + $(this).attr('id') + " option";
			$(sel).filter(function() {
			    return this.text == txt;
			}).attr('selected', true);
		});

		$("#search_fabufang").val($("#search_fabufang").attr("data"));

		var strSearch="";
		$(".searchitemall").each(function() {
			var tmptxt = $(this).find("option:selected").text();
			if(tmptxt != '不限') {
				strSearch += tmptxt + "+";
			}
		});
		if($("#gangwei").val() != "") {
			strSearch += $("#gangwei").val();
		}
		$("#search_condition").html(strSearch);

               $("li#li_job").parent().find("li").removeClass("active");
               $("li#li_job").find('a').addClass("active")

            })
        </script>
    </body>
</html>

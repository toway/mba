                        if( result != 0) {
                            alert("设置错误！");
                            return;
                        }
                        if(el.html() == "加为好友"){
                            el.html("取消好友");
                        }
                        else {
                            el.html("加为好友");
                        }
                    };

                  if(el.html() == "加为好友") {

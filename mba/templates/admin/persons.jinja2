                    <div class="col-md-3">

                        {%  include "/admin/menu.jinja2" %}

                    </div>

                    <div class="col-md-9">
                        <h2>所有用户</h2>

                        {% include "/admin/pagination.jinja2" %}

                        <form name="persons_mgmt"  method="POST" >

                        <table class="table table-striped table-bordered">
                            <tr>
                                <th>ID</th>
                                <th>用户名</th>
                                <th>邮箱</th>
                                <th>姓名</th>
                                <th>激活状态</th>
                                <th>用户种类</th>
                                <th>用户组</th>
                                <th>操作</th>
                            </tr>
                            {% for person in persons %}
                                <tr>
                                    <td>{{ person.id }}</td>
                                    <td><a href="/person/{{ person.id }}">{{ person.name }}</a></td>
                                    <td>{{ person.email }}</td>
                                    <td>{{ person.real_name }}</td>
                                    <td>{{ person.active }}</td>
                                    <td>{{ person.type }}</td>
                                    <td>{{ person.groups }}</td>
                                    <td> # </td>

                                </tr>

                            {% endfor %}

                        </table>




                        </form>

                    </div>


                </div>
            </div>
        </div>



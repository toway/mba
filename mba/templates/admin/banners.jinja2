        {% include "header.jinja2" %}





         <div class="mba-margin-top">

            <div class="container ">
                <br/>
                <div class="row">

                    <div class="col-md-3">

                        {%  include "/admin/menu.jinja2" %}

                    </div>

                    <div class="col-md-9">


                        {% include "messages.jinja2" %}

                        <h2>首面BANNER管理</h2>


                        <table class="table table-striped table-bordered" id="banner-list">
                            <tr>
                                <th>ID</th>
                                <th>类型</th>
                                <th>图片BANNER图片地址</th>
                                <th>图片BANNER链接地址</th>
                                <th>活动、职位BANNER</th>
                                <th>操作</th>
                            </tr>
                            {% for banner in banners %}
                            <tr>
                                <td>{{ banner.id }}</td>
                                <td>{{ banner.type }}</td>
                                <td>{{ banner.img_url }}</td>
                                <td>{{ banner.link_url }}</td>
                                <td>{{ banner.htmlcontent }}</td>
                                <td>
                                    <a href="/admin/banner/edit/{{ banner.id }}" class="banner_modify" id="mdf-{{ banner.id }}" value="do-modify">修改</a>
                                    <button class="banner_delete" id="del-{{ banner.id }}" value="do-delete">删除</button>
                                </td>
                            </tr>
                            {% else %}
                                <tr><td colspan="6">首页无BANNER</td></tr>
                            {% endfor %}

                        </table>

                        <a href="/admin/banner/add" class="btn btn-default banner_add" id="add-banner" value="do-add">添加</a>

                    </div>


                </div>
            </div>
        </div>


        {% include "footer.jinja2" %}



        {% include "inc/js.jinja2" %}


        <script type="text/javascript">
            $(function(){

               $("li#li_admin").parent().find("li").removeClass("active");
               $("li#li_admin").addClass("active");


                function do_job(method, options, callback){

                    $.extend(options, {'method':method});
                    $.post('/admin/meetups/types',options, callback);
                }



                $('.meetuptype_modify').click(function(){
                    var self = this;
                    var btn = $(this).html().trim();

                    var titlewrap = $(this).parent().prev();
                    if( btn === '修改'){
                        var title = titlewrap.html().trim();
                        titlewrap.html($('<input/>').attr('type', 'text').val(title));
                        $(this).html('确定');

                    }else {
                        var title = titlewrap.children(0).val().trim();
                        titlewrap.html(title);
                        do_job('mdf-mt',{'mt-title':title,'mt-id': titlewrap.prev().html().trim() },function(ret){
                            $(self).html('修改');
                            window.location.reload();
                        });
                    }
                 });


                $('.meetuptype_delete').click(function(){
                    var self = this;
                    var titlewrap = $(this).parent().prev();
                    if( confirm('确认删除此条目？') ) {
                        var mt_id = $(self).attr('id').substr(4);
                        var title = titlewrap.html().trim();
                        do_job('del-mt', {'mt-id': mt_id, 'mt-title': title}, function () {
                            window.location.reload();
                        });
                    }
                });


                $('#add-meetup-type').click(function(){
                    var self = this,
                        btn = $(self).html().trim();

                    if( btn == "添加"){
                        var toadd = "<tr> "+
                                "<td>{{ count+1 }}</td>"+
                                "<td><input id='toaddmt' type='text'/> </td>"+
                                "<td></td>"+
                                "</tr>";
                        $("#mt-list").append(toadd);
                        $(self).html("确定");
                    }else{
                        var title =  $("#mt-list input").val();
                        if( ! title ){
                            alert("请填写活动类别!");
                            return;
                        }

                        do_job('add-mt', {'mt-title': title}, function(){
                            window.location.reload();
                            $(self).html("添加");
                        });

                    }

                });



                /*
                $(document).pjax('.home-menu a', '#pjax-content');
                 */
            });
        </script>






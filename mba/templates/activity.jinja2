    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>{{ title }}</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

        <!-- Bootstrap -->
        <link rel="stylesheet" type="text/css" href="/fanstatic/mba/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="/fanstatic/mba/css/main.css">
        <link rel="stylesheet" type="text/css" href="/fanstatic/mba/css/normalize.css">
        <link rel="stylesheet" type="text/css" href="/fanstatic/mba/css/all.css">

        <script src="static/js/vendor/modernizr-2.6.2.min.js"></script>
        <style>

            body{
                background-color: #E3EBDF;
            }

            .activity-left{
                text-align: center;
                margin-top: 20px;
            }

            .left-section{
                border: 2px solid #DFDFDF;
                background-color: #F5F5F5;
                margin: 20px 0;
                border-right: 1px solid #DFDFDF;
            }

            .activity-left .activity-menu{
                margin-top: 0;
            }

            .activity-left .activity-menu li{
                text-decoration: none;
                list-style: none;
                list-style-type: none;
                line-height: 30px;
            }



            .speaker{
                padding: 10px;
            }

            .speaker-splitter{
                margin:   10px -10px 10px -10px;
            }

            .speaker-introduction {
                text-align: left;
                line-height: 20px;
            }

            .activity-right{
                margin: 10px 0;
            }
            .activity-section{
                background-color: #F5F5F5;
                margin: 15px;
                padding: 20px;
            }

            .activity-comments .comments-splitter{
                margin:   10px -10px 10px -10px;
            }

            .activity-comments{
                text-align: left;
                vertical-align: middle;
                padding: 10px;
            }

            .activity-comments ul{
                padding: 0;
            }

            .activity-comments hr{
                margin: 2px;
            }

            .activity-section .section-title{
                border-left: 2px solid #2e70ba;
                margin-bottom: 8px;
                margin-left: -20px;
                padding-left: 20px;
            }

            .activity-status{
                float: right;
            }

            .activity-status-ongoing{
                color:blue;
            }
            .activity-status-finished{
                color:red;
            }

            h1.activity-title{
                display: inline;
                font-size: 24px;
                padding-left: 30px;
            }

            .applicant {
                display: inline-block;
                width: 32px;
                text-align: center;
            }

            .apply-section{
                margin: 40px 80px 150px 0;
            }

            .btn-apply{
                float: right;
            }

        </style>
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>

        {% include "header.jinja2" %}



         <div class="mba-margin-top">

            <div class="container ">
                <div class="row">


                    <br/>


                    <div class="col-md-9 meetup-main">
                         <div class="panel panel-default meetup-subject">

                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-md-4">
                                        <img src="xx" width="190px" height="240px" />

                                    </div>
                                    <div class="col-md-8">
                                        <h2>{{ context.title }}</h2>
                                        <br/>
                                        <div>
                                            分享嘉宾：
                                            {% for teacher in context.teachers %}
                                                {{ teacher }} &nbsp;
                                            {% endfor %}
                                        </div>
                                        <div>地点：{{ context.location }}</div>
                                        <div>活动时间：{{ context.meetup_start_time }} - {{ context.meetup_finish_time }}</div>
                                        
                                        <div>费用：{{ context.pay_count }}元/人</div>
                                        <div>人数限制：{{ context.limit_num }}人 (101人已报名)</div>
                                        <br/>
                                        <div>报名时间：{{ context.enroll_start_time }} - {{ context.enroll_finish_time }}</div>
                                        
                                        {% if time_now < context.enroll_start_time %}
                                            <button class="btn btn-primary disabled">报名暂未开始</button>
                                        {% elif time_now > context.enroll_start_time and time_now < context.enroll_finish_time %}
                                            
                                            {% if not self_enrolled %}
                                            <form name="enroll" id="formEnroll" method="POST" >
                                                <button type="submit" name="enroll" class="btn btn-primary">报名参加</button>
                                            </form>
                                            {% else %}
                                                <button name="enroll" class="btn btn-primary disabled">已报名</button>
                                            {% endif %}
                                            
                                        {% elif time_now > context.enroll_finish_time %}
                                            <button class="btn btn-primary disabled">报名已经结束</button>
                                        {% endif %}                                        
                                        
                                        
                                    </div>

                                </div>

                                <hr/>

                                <div>
                                    <h3>活动详情</h3>
                                    <p class="meetup-details">
                                        {{ contextbody }}

                                    </p>
                                </div>

                            </div>
                         </div>


                        <div class="panel panel-default meetup-comments">
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-md-3 col-md-offset-9">
                                        <div class="meetup-comment-prompt">
                                            还可以输入<span id="left-comments-num">140</span>字
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-1">
                                
                                    </div>
                                    <div class="col-md-11">
                                        <textarea id='meetup-comment-input' class="form-control" rows="3" placeholder="顺便说点什么吧.."></textarea>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-offset-10 col-md-2">
                                        <br/>
                                        <button class="btn btn-primary" id="do-comment" disabled="disabled">发表评论</button>
                                    </div>

                                </div>

                                <br/>
                                3条评论
                                <hr/>




                                <div class="row">
                                    <div class="col-md-1">
                                        <img src="/fanstatic/mba/img/avatars/default_avatar_0.png" width="40px" height="40px"/>
                                    </div>
                                    <div class="col-md-11">
                                        <span>天使他说:</span>
                                        <span class="meetup-comment-timeline">5分钟前</span>
                                        <div>补充了移动短板</div>
                                    </div>

                                </div>



                            </div>
                        </div>

                    </div>


                    <div class="col-md-3 meetup-rightbar">
                        <div id="meetup-map" width="100%">
                        </div>

                       <br/>

                        <div class="applicants panel panel-default">
                            <div class="panel-heading">
                                <div class="panel-title">
                                    已报名
                                </div>
                            </div>
                            <div class="panel-body">
                                    <div class="applicants">
                                        {% for part in context.parts %}
                                            <img alt="{{ part.name }}"class="navbar-avatar" src="{{ part.avatar_prefix }}{{ part.avatar }}"
                                            width="30px" height="30px"/>
                                        {% endfor %}
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>
                                        <img src="fanstatic/mba/img/avatars/avatar-default-micro.jpg"/>

                                    </div>

                            </div>

                        </div>


                        <div class="applicants panel panel-default">
                            <div class="panel-heading">
                                <div class="panel-title">
                                    你可能感兴趣的活动
                                </div>
                            </div>
                            <div class="panel-body">
                                <ul>
                                    <li>
                                        跨界*合作-盛夏互联网BD交流会
                                    </li>
                                    <li>
                                        跨界*合作-盛夏互联网BD交流会
                                    </li>
                                    <li>
                                        跨界*合作-盛夏互联网BD交流会
                                    </li>

                                </ul>
                            </div>

                        </div>



                    </div>

                </div>
            </div>
        </div>


        {% include "footer.jinja2" %}



        {% include "inc/js.jinja2" %}


        <script type="text/javascript">
            $(function(){

               $("li#li_meetups").parent().find("li").removeClass("active");
               $("li#li_meetups").addClass("active");


               $('#meetup-comment-input').keyup(function(){

                   var len = $(this).val().trim().length;
                   if(len>0 ){
                       $('#do-comment').removeAttr('disabled');
                   }else{
                       $('#do-comment').attr('disabled','disabled');
                   }
                   $('#left-comments-num').html(140-len);
               });

                /*
                $(document).pjax('.home-menu a', '#pjax-content');
                 */
            });
        </script>

        <script charset="utf-8" src="http://map.qq.com/api/js?v=2.exp"></script>
        <script>
            $(function(){


                map = new qq.maps.Map(
                    $("#meetup-map")[0],
                        {
                        center: new qq.maps.LatLng(39.914850, 116.403765),
                        zoom:13
                        }
                );

                var scaleControl = new qq.maps.ScaleControl({
                    align: qq.maps.ALIGN.BOTTOM_LEFT,
                    margin: qq.maps.Size(20, 10),

                    map: map
                });


            });

        </script>





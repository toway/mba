            $(".resume_operate").click(function(){
              var url = $(this).attr("url");
              console.log(url);
              if(url)
              {
                location.href="./"+url;
              } 
            });

            $(document).ready(function() {
               $("li#li_job").parent().find("li").removeClass("active");
               //$("li#li_job").find("a").addClass("active");
			   $("li#li_job").addClass("active");
            });

	    function refresh_manager() {
		$.get("/job-manager-info", function(result) {
			$("#manager_info").html(result);
		});
	    }

	    function applyit(id) {
		  $.get("/job-postit/"+id, function(result){
			if('ok' == result) {
				alert("申请成功");
				refresh_manager();
			} else if('dup' == result) {
				alert('已经申请');
			} else {
				alert("申请失败");
			}
		  });
	    }

	    function collectit(id) {
		  $.get("/job-collect/"+id, function(result){
			if('ok' == result) {
				alert("收藏成功");
				refresh_manager();
			} else {
				alert("收藏失败");
			}
		  });
	    }

        </script>
    </body>
</html>
